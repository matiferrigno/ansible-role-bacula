#
# List Directors who are permitted to contact this File daemon
#
Director {
  Name = {{ bacula_dir_name }}
  Password = "{{ item.pass | default('changeme!') }}"
{% if bacula_fd_tls_enabled|bool %}
  TLS Enable = True
  TLS Require = {{ bacula_fd_tls_require }}
  TLS Verify Peer = {{ bacula_fd_tls_verify_peer }}
  TLS Certificate = {{ bacula_fd_tls_certificate }}
  TLS Key = {{ bacula_fd_tls_key }}
  TLS CA Certificate File = {{ bacula_ca_certificate }}
{% else %}
  TLS Enable = False
{% endif %}

}

#
# Restricted Director, used by tray-monitor to get the
#   status of the file daemon
#
Director {
  Name = {{ bacula_dir_name }}-mon
  Password = "{{ item.pass | default('changeme!') }}"
  Monitor = True
}

#
# "Global" File daemon configuration specifications
#
FileDaemon {
  Name = {{ item.name }}-fd
  FDPort = {{ item.fdport | default(9102) }}
  WorkingDirectory = /var/lib/bacula
  Pid Directory = /run/bacula
  Maximum Concurrent Jobs = 20
  Plugin Directory = /usr/lib/bacula
  FDAddress = {{ item.host | default(ansible_default_ipv4.address) }}
{% if bacula_fd_tls_enabled|bool %}
  TLS Enable = yes
  TLS Require = {{ bacula_fd_tls_require }}
  TLS Certificate = {{ bacula_fd_tls_certificate }}
  TLS Key = {{ bacula_fd_tls_key }}
  TLS CA Certificate File = {{ bacula_ca_certificate }}
{% endif %}

}

# Send all messages except skipped files back to Director
Messages {
  Name = Standard
  director = {{ bacula_dir_name }} = all, !skipped, !restored
}
